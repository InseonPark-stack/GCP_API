<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.UserDAO">

	<!-- 유저 전체 조회 -->
	<select id="selectUser" resultType="com.example.demo.dto.UserInfo">
		select *
		  from user_info
	</select>
	
	<!-- 유저 상세 조회 -->
	<select id="selectUserByIdAndPw" parameterType="String" resultType="com.example.demo.dto.UserInfo">
		select *
		  from user_info
		 where user_id = #{id}
		   and user_pw = #{pw}
	</select>

	<!-- 유저 등록 -->
	<insert id="insertUser" parameterType="UserInfo">
		insert into user_info values (
			#{userId}, #{userPw}, #{userNick}, #{userName}, #{userGender}, #{userEmail}, #{userPhone}, #{userBirth}
		)
	</insert>
	
	<!-- 유저 수정 -->
	<update id="updateUser" parameterType="UserInfo">
		update user_info
		   set user_pw = #{userPw},
		 where user_id = #{userId}
	</update>

	<!-- 유저 삭제 -->
	<delete id="deleteBoard" parameterType="UserInfo">
		delete 
		  from user_info
		 where user_id = #{userId}
	</delete>

</mapper>

